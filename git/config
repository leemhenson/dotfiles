  helper = osxkeychain

[heroku]
  account = personal

[push]
  default = current

[pull]
  rebase = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[pager]
	diff = diff-so-fancy | less --tabs=2 -RFX
	show = diff-so-fancy | less --tabs=4 -RFX
[fetch]
	prune = true
