# Keyboard mappings

<Space>!       # shell-command
<Space>1-9     # select-window-(1-9)
<Space><Space> # avy-goto-char-timer
<Space>bk      # kill-this-buffer
<Space>bs      # ivy-switch-buffer
<Space>ci      # evilnc-comment-or-uncomment-lines
<Space>cr      # comment-or-uncomment-region
<Space>gs      # magit-status
<Space>hb      # counsel-descbinds
<Space>hf      # counsel-describe-function
<Space>hx      # counsel-M-x
<Space>pd      # projectile-dired
<Space>sf      # counsel-find-file
<Space>sg      # counsel-git
<Space>sp      # counsel-projectile
<Space>st      # projectile-ag
<Space>wk      # delete-window
<Space>wsb     # split-window-right
<Space>wsr     # split-window-below

# Visual mode
<Ctrl-o>       # move selected lines down
<Ctrl-p>       # move selected lines up

# Dired
^              # go to parent directory
+              # create directory
c              # find-file
R              # rename file
d              # mark files for deletion
x              # commit deletion of marked files

# Ag
n              # next match
p              # previous match
g              # refresh results
q              # close buffer
k              # kill buffer
<C-c><C-f>     # activate next-error-follow-minor-mode
